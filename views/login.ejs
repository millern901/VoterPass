<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
        <%- include('./partials/messages.ejs') %>
        <form action="/admin/login" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <div class="lead mt-4 text-center">
          <p>VoterPass must be started with the Master Admin credentials. If the system has already been activated, please login or register.</p>
          <a class="btn btn-primary btn-block" href="/admin/startup">Master Admin Login</a>  
          <a class="btn btn-primary btn-block" href="/admin/register">Register</a>  
        </div>
      </div>
    </div>
  </div>