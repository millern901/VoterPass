<div style="background-color:rgb(233, 233, 236); border-color: rgb(75, 72, 72); border-width: thin; border-style: solid;">
  <%- include('./partials/dashnav.ejs') %>

  <h1 class="text-center mb-3" style="margin-top: 15px;">
    <i class="fa fa-wrench"> Update Profile</i> 
  </h1>

  <div class="card text-white bg-secondary mb-3" style="width: 50%; margin-left: 25%; margin-bottom: 15px; background-color: rgb(255, 255, 255);">
    <div class="card-header">
      <h4 class="text-center">
          Update Form
      </h4>
  </div>
    <div class="card-body">
      <%- include('./partials/messages.ejs') %>
      <form action="/dashboard/update" method="POST">
        <div class="form-group">
          <label for="firstName">First Name: <%= user.firstName %></label>
          <input
            type="firstName"
            id="firstName"
            name="firstName"
            class="form-control"
            placeholder="Enter New First Name"
            value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="lastName">Last Name: <%= user.lastName %></label>
          <input
            type="lastName"
            id="lastName"
            name="lastName"
            class="form-control"
            placeholder="Enter New Last Name"
            value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="username">Username: <%= user.username %></label>
          <input
            type="username"
            id="username"
            name="username"
            class="form-control"
            placeholder="Enter New Username"
            value="<%= typeof username != 'undefined' ? username : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password1">Password</label>
          <input
            type="password"
            id="password1"
            name="password1"
            class="form-control"
            placeholder="Enter New Password"
            value="<%= typeof password1 != 'undefined' ? password1 : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm New Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block"> Update </button>
      </form>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</div>
