<div style="background-color:rgb(233, 233, 236); border-color: rgb(75, 72, 72); border-width: thin; border-style: solid;">
  <%- include('./partials/welcomenav.ejs') %>

  <h1 class="text-center mb-3" style="margin-top: 15px;">
    <i class="fas fa-user-plus fa-2x"></i> Admin Registration
  </h1>

  <div class="card text-white bg-secondary mb-3" style="width: 50%; margin-left: 25%; margin-bottom: 15px; background-color: rgb(255, 255, 255);">
    <div class="card-header">Register Form</div>
    <div class="card-body">
      <%- include('./partials/messages.ejs') %>
      <form action="/admin/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Master Password</label>
          <input
            type="password"
            id="password3"
            name="password3"
            class="form-control"
            placeholder="Master Password"
            value="<%= typeof password3 != 'undefined' ? password3 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</div>
