<div style="background-color:rgb(233, 233, 236); border-color: rgb(75, 72, 72); border-width: thin; border-style: solid;">
  <%- include('./partials/welcomenav.ejs') %>

  <h1 class="text-center mb-3" style="margin-top: 15px;">
    <i class="fas fa-user-plus"> Admin Registration</i> 
  </h1>

  <div class="card text-white bg-secondary mb-3" style="width: 50%; margin-left: 25%; margin-bottom: 15px; background-color: rgb(255, 255, 255);">
    <div class="card-header">Register Form</div>
    <div class="card-body">
      <%- include('./partials/messages.ejs') %>
      <form action="/admin/register" method="POST">
        <div class="form-group">
          <label for="firstname">First Name</label>
          <input
            type="firstname"
            id="firstname"
            name="firstname"
            class="form-control"
            placeholder="Enter First Name"
            value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="lastname">Last Name</label>
          <input
            type="lastname"
            id="lastname"
            name="lastname"
            class="form-control"
            placeholder="Enter Last Name"
            value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="username"
            id="username"
            name="username"
            class="form-control"
            placeholder="Enter Username"
            value="<%= typeof username != 'undefined' ? username : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password1">Password</label>
          <input
            type="password"
            id="password1"
            name="password1"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password1 != 'undefined' ? password1 : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password3">Master Password</label>
          <input
            type="password"
            id="password3"
            name="password3"
            class="form-control"
            placeholder="Enter Master Password"
            value="<%= typeof password3 != 'undefined' ? password3 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
      </form>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</div>
