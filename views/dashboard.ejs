<audio autoplay>
  <source src="sound.mp3" type="audio/mpeg">
</audio>

<div style="background-color:rgb(233, 233, 236); border-color: rgb(75, 72, 72); border-width: thin; border-style: solid;">
    <%- include('./partials/dashnav.ejs') %>
    
    <h1 class="text-center mb-3" style="margin-top: 15px;">
        <i class="fa fa-home"> Welcome to VoterPass, <%= user.firstName %> </i> 
    </h1>

    <div class="text-center" style="width: 85%; margin-left: 7.25%;">
        <%- include('./partials/messages.ejs') %>
    </div>
    
    <div style="margin-bottom: 25px; display: flex; justify-content: space-between;">
        <div style="flex-basis: 48%;">
            <div class="card text-white bg-secondary mb-3" style="margin-left: 15px; height: 90%;">
                <div class="card-header">
                    <h3 class="text-center">
                        Queue Status
                    </h3>
                </div>
                <div class="card-body">
                  <h5 class="card-title">Current Time: <%= currentTime %>
                    <p></p>
                  </h5>
                  <h5 class="card-title">Queue Length: <%= queueLength %>
                    <p></p>
                  </h5>
                  <h5 class="card-title">Next Callback Time: <%= nextCallbackTime %>
                    <p></p>
                  </h5>
                </div>
            </div>
        </div>
        <div style="flex-basis: 48%;">
            <div class="card text-white bg-secondary mb-3" style="margin-right: 15px; height: 90%;">
                <div class="card-header">
                    <h3 class="text-center">
                        Header Description
                    </h3>
                </div>
                <div class="card-body">
                  <h4 class="card-title">Secondary card title</h4>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
              </div>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>
</div>
